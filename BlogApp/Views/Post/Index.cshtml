@model PostViewModel

<div class="row">
	<div class="col-lg-8">
		<div class="bg-white p-4">
			<h1 class="h4 mb-4">
				Popular Posts
			</h1>
			@foreach (var post in Model.Posts)
			{
				<div class="card bg-transparent border-0 mb-3">
					<div class="row">
						<div class="col-4">
							<img src="~/img/@post.Image" class="img-fluid rounded">
						</div>
						<div class="col-8">
							<h5><a href="#" class="btn-link fw-bold">@post.Title</a></h5>
							<p>@post.Content</p>
							<a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web Development</a>
						</div>
					</div>
				</div>
				<hr class="my-3" />
			}
		</div>
	</div>
	<div class="col-lg-4">
	   <vc:tags-menu></vc:tags-menu> 
	   <vc:post-menu></vc:post-menu> 
	 @* @await Component.InvokeAsync("TagsMenu")  *@
	</div>
</div>


