@model Post

<div class="row">
	<div class="col-lg-8">
		<div class="bg-white p-4">
			<h1 class="h4 mb-4">@Model.Title</h1>
			<div class="tags">
				<a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">PHP</a>
				<a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web Development</a>
			</div>

			<img src="~/img/@Model.Image" class="img-fluid rounded">
			<div>
				@Model.Content
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<vc:tags-menu></vc:tags-menu>
		<vc:post-menu></vc:post-menu>
	</div>
</div>
